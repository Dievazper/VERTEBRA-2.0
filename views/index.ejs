<%- include('partials/header') %>

    <header class="text-center mb-16 relative">
        <div
            class="absolute inset-0 -z-10 bg-gradient-to-r from-indigo-100 via-purple-100 to-pink-100 opacity-40 blur-3xl rounded-full w-3/4 mx-auto h-32 top-0 transform -translate-y-12">
        </div>
        <h1 class="text-5xl md:text-7xl font-black text-slate-900 mb-6 tracking-tight leading-tight">
            The Future is <span
                class="bg-clip-text text-transparent bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500">Now.</span>
        </h1>
        <p class="text-xl text-slate-500 max-w-2xl mx-auto font-medium">Curated stories for the digital generation.</p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-10">
        <% if(posts.length> 0) { %>
            <% posts.forEach(post=> { %>
                <article
                    class="group relative bg-white rounded-3xl overflow-hidden shadow-sm hover:shadow-2xl hover:shadow-indigo-500/20 transition-all duration-500 transform hover:-translate-y-2 border border-slate-100 h-full flex flex-col">
                    <a href="/post/<%= post.slug %>" class="block overflow-hidden relative aspect-video">
                        <% if(post.image) { %>
                            <img src="<%= post.image %>" alt="<%= post.title %>"
                                class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700 ease-in-out">
                            <% } else { %>
                                <div
                                    class="w-full h-full bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500 flex items-center justify-center">
                                    <span class="text-white/50 text-6xl font-black">V</span>
                                </div>
                                <% } %>
                                    <div
                                        class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors duration-300">
                                    </div>
                    </a>

                    <div class="p-6 md:p-8 flex flex-col flex-grow">
                        <div class="flex items-center justify-between mb-4">
                            <span
                                class="px-3 py-1 rounded-full bg-indigo-50 text-indigo-600 text-xs font-bold uppercase tracking-wider">Tech</span>
                            <span class="text-xs text-slate-400 font-medium">
                                <%= new Date(post.createdAt).toLocaleDateString(undefined, { month: 'short' ,
                                    day: 'numeric' }) %>
                            </span>
                        </div>

                        <h2
                            class="text-2xl font-bold text-slate-900 mb-3 leading-snug group-hover:text-indigo-600 transition-colors">
                            <a href="/post/<%= post.slug %>">
                                <span class="absolute inset-0"></span>
                                <%= post.title %>
                            </a>
                        </h2>

                        <p class="text-slate-500 text-sm leading-relaxed mb-6 line-clamp-3">
                            <%= post.body.substring(0, 120) %>...
                        </p>

                        <div
                            class="mt-auto flex items-center text-indigo-600 font-semibold text-sm group-hover:translate-x-2 transition-transform duration-300">
                            Read Story
                            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                            </svg>
                        </div>
                    </div>
                </article>
                <% }) %>
                    <% } else { %>
                        <div class="col-span-full py-24 text-center">
                            <div class="inline-block p-6 rounded-full bg-slate-50 mb-4">
                                <svg class="w-12 h-12 text-slate-300" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10">
                                    </path>
                                </svg>
                            </div>
                            <h3 class="text-xl font-bold text-slate-900">No stories yet</h3>
                            <p class="text-slate-500 mt-2">Check back soon for new content.</p>
                        </div>
                        <% } %>
    </div>

    <%- include('partials/footer') %>