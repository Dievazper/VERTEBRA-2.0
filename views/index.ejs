<%- include('partials/header') %>

    <div class="container mx-auto px-6 py-12 flex flex-col lg:flex-row gap-12">
        <!-- Main Content -->
        <div class="lg:w-2/3">
            <% if(posts.length> 0) { %>
                <% posts.forEach(post=> { %>
                    <article class="mb-16 border-b border-gray-100 pb-12 last:border-0">
                        <% if(post.image) { %>
                            <div class="mb-6 overflow-hidden rounded-lg">
                                <a href="/post/<%= post.slug %>">
                                    <img src="<%= post.image %>" alt="<%= post.title %>"
                                        class="w-full h-auto hover:opacity-90 transition-opacity">
                                </a>
                            </div>
                            <% } %>

                                <h2
                                    class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 hover:text-[#2271b1] transition-colors font-display">
                                    <a href="/post/<%= post.slug %>">
                                        <%= post.title %>
                                    </a>
                                </h2>

                                <div class="flex items-center text-sm text-gray-500 mb-6 font-medium">
                                    <span class="mr-4">By <a href="#"
                                            class="text-[#2271b1] hover:underline">Admin</a></span>
                                    <span class="mr-4">&bull;</span>
                                    <span>
                                        <%= new Date(post.createdAt).toLocaleDateString(undefined, { year: 'numeric' ,
                                            month: 'long' , day: 'numeric' }) %>
                                    </span>
                                    <span class="mr-4 ml-4">&bull;</span>
                                    <a href="#" class="text-gray-500 hover:text-[#2271b1]">Uncategorized</a>
                                </div>

                                <div class="text-gray-600 leading-loose text-lg mb-6 font-serif">
                                    <%= post.body.substring(0, 250) %>...
                                </div>

                                <a href="/post/<%= post.slug %>"
                                    class="inline-block text-[#2271b1] font-bold uppercase tracking-wider text-sm hover:underline border-b-2 border-transparent hover:border-[#2271b1] transition-all pb-1">
                                    Continue Reading &rarr;
                                </a>
                    </article>
                    <% }) %>
                        <% } else { %>
                            <div class="py-20 text-center">
                                <h3 class="text-2xl font-bold text-gray-900">Nothing Found</h3>
                                <p class="text-gray-500 mt-2">Ready to publish your first post? Get started here.</p>
                            </div>
                            <% } %>
        </div>

        <!-- Sidebar -->
        <aside class="lg:w-1/3 space-y-12">
            <!-- Search -->
            <div class="bg-gray-50 p-6 rounded border border-gray-100">
                <h3 class="font-bold text-gray-900 mb-4 uppercase tracking-wider text-xs">Search</h3>
                <div class="flex">
                    <input type="text" placeholder="Search..."
                        class="w-full border border-gray-300 px-3 py-2 text-sm focus:border-[#2271b1] outline-none">
                    <button class="bg-[#2271b1] text-white px-4 py-2 hover:bg-[#135e96] transition-colors">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Recent Posts -->
            <div>
                <h3
                    class="font-bold text-gray-900 mb-6 uppercase tracking-wider text-xs border-b-2 border-gray-100 pb-2 inline-block">
                    Recent Posts</h3>
                <ul class="space-y-4">
                    <% if(posts.slice(0, 5).length> 0) { %>
                        <% posts.slice(0, 5).forEach(post=> { %>
                            <li class="flex items-start group">
                                <% if(post.image) { %>
                                    <div class="w-16 h-16 mr-4 flex-shrink-0 bg-gray-100">
                                        <img src="<%= post.image %>"
                                            class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity">
                                    </div>
                                    <% } %>
                                        <div>
                                            <h4
                                                class="text-sm font-semibold text-gray-800 leading-snug group-hover:text-[#2271b1] transition-colors">
                                                <a href="/post/<%= post.slug %>">
                                                    <%= post.title %>
                                                </a>
                                            </h4>
                                            <span class="text-xs text-gray-400 mt-1 block">
                                                <%= new Date(post.createdAt).toLocaleDateString() %>
                                            </span>
                                        </div>
                            </li>
                            <% }) %>
                                <% } else { %>
                                    <li class="text-gray-400 text-sm">No recent posts.</li>
                                    <% } %>
                </ul>
            </div>

            <!-- Categories -->
            <div>
                <h3
                    class="font-bold text-gray-900 mb-6 uppercase tracking-wider text-xs border-b-2 border-gray-100 pb-2 inline-block">
                    Categories</h3>
                <ul class="space-y-2 text-sm text-gray-600">
                    <li class="flex justify-between items-center"><a href="#"
                            class="hover:text-[#2271b1]">Technology</a> <span
                            class="bg-gray-100 rounded-full px-2 py-0.5 text-xs text-gray-500">3</span></li>
                    <li class="flex justify-between items-center"><a href="#" class="hover:text-[#2271b1]">Design</a>
                        <span class="bg-gray-100 rounded-full px-2 py-0.5 text-xs text-gray-500">1</span></li>
                    <li class="flex justify-between items-center"><a href="#"
                            class="hover:text-[#2271b1]">Uncategorized</a> <span
                            class="bg-gray-100 rounded-full px-2 py-0.5 text-xs text-gray-500">0</span></li>
                </ul>
            </div>
        </aside>
    </div>

    <%- include('partials/footer') %>