<%- include('partials/header') %>

    <article class="max-w-4xl mx-auto">
        <div class="mb-10 text-center">
            <span
                class="inline-block px-4 py-1.5 rounded-full bg-indigo-50 text-indigo-600 text-xs font-bold uppercase tracking-wider mb-6">Featured
                Story</span>
            <h1 class="text-4xl md:text-6xl font-black text-slate-900 mb-6 leading-tight tracking-tight">
                <%= post.title %>
            </h1>
            <div class="flex items-center justify-center space-x-4 text-slate-500 text-sm font-medium">
                <div class="flex items-center">
                    <div class="w-8 h-8 rounded-full bg-gradient-to-tr from-indigo-500 to-pink-500 mr-3"></div>
                    <span>Admin</span>
                </div>
                <span>&bull;</span>
                <time>
                    <%= new Date(post.createdAt).toLocaleDateString(undefined, { year: 'numeric' , month: 'long' ,
                        day: 'numeric' }) %>
                </time>
            </div>
        </div>

        <% if(post.image) { %>
            <div class="rounded-[2rem] overflow-hidden mb-12 shadow-2xl shadow-indigo-200">
                <img src="<%= post.image %>" alt="<%= post.title %>" class="w-full h-auto object-cover max-h-[600px]">
            </div>
            <% } %>

                <div
                    class="prose prose-lg prose-indigo mx-auto text-slate-600 leading-loose prose-headings:font-display prose-headings:font-bold prose-headings:text-slate-900 prose-a:text-indigo-600 prose-img:rounded-3xl">
                    <%- post.body.replace(/\n/g, '<br>' ) %>
                </div>

                <div class="mt-20 pt-10 border-t border-slate-100 flex justify-between items-center">
                    <a href="/"
                        class="group inline-flex items-center text-indigo-600 font-bold hover:text-indigo-800 transition-colors">
                        <div
                            class="w-10 h-10 rounded-full bg-indigo-50 flex items-center justify-center mr-3 group-hover:bg-indigo-100 transition-colors">
                            <svg class="w-5 h-5 transform group-hover:-translate-x-1 transition-transform" fill="none"
                                stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                        </div>
                        Back to Stories
                    </a>

                    <div class="flex space-x-4">
                        <!-- Share buttons placeholder -->
                        <button
                            class="w-10 h-10 rounded-full bg-slate-50 flex items-center justify-center text-slate-400 hover:bg-slate-100 hover:text-slate-600 transition-all">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path
                                    d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z" />
                            </svg>
                        </button>
                    </div>
                </div>
    </article>

    <%- include('partials/footer') %>