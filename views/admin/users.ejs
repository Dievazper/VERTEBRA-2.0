<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users &lsaquo; Vertebra 2.0</title>
    <link href="/css/style.css" rel="stylesheet">
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        }
    </style>
</head>

<body class="bg-[#f0f0f1] text-[#3c434a]">

    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <%- include('../partials/admin-sidebar', { active: 'users' }) %>

            <!-- Main Content -->
            <div class="flex-grow flex flex-col">
                <!-- Top Bar -->
                <%- include('../partials/admin-header') %>

                    <div class="p-4 md:p-8">
                        <div class="flex justify-between items-center mb-6">
                            <h1 class="text-2xl font-normal text-[#1d2327]">Users</h1>
                            <a href="/admin/users/create"
                                class="inline-block border border-[#2271b1] bg-[#f6f7f7] text-[#2271b1] hover:bg-[#f0f0f1] hover:border-[#135e96] text-sm font-semibold py-1 px-3 rounded transition-colors duration-200">
                                Add New User
                            </a>
                        </div>

                        <div class="bg-white border border-[#c3c4c7] shadow-sm">
                            <table class="w-full text-left border-collapse text-sm">
                                <thead>
                                    <tr class="bg-white text-[#1d2327] border-b border-[#c3c4c7]">
                                        <th class="p-3 font-semibold w-10"><input type="checkbox"></th>
                                        <th class="p-3 font-semibold">Username</th>
                                        <th class="p-3 font-semibold">Role</th>
                                        <th class="p-3 font-semibold">Posts</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-[#c3c4c7]">
                                    <% users.forEach((u, index)=> { %>
                                        <tr
                                            class="<%= index % 2 === 0 ? 'bg-[#f6f7f7]' : 'bg-white' %> hover:bg-[#f0f0f1] group">
                                            <td class="p-3"><input type="checkbox"></td>
                                            <td class="p-3 relative">
                                                <strong class="block text-[#1d2327] mb-1 font-semibold text-[14px]">
                                                    <%= u.username %>
                                                </strong>
                                                <% if(u.username !=='admin' && u.username !==user.username) { %>
                                                    <div
                                                        class="flex text-xs space-x-2 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                                                        <form action="/admin/users/delete/<%= u._id %>?_method=DELETE"
                                                            method="POST" class="inline"
                                                            onsubmit="return confirm('Delete this user?');">
                                                            <button type="submit"
                                                                class="text-[#b32d2e] hover:underline bg-transparent border-0 p-0 cursor-pointer text-xs">Delete</button>
                                                        </form>
                                                    </div>
                                                    <% } %>
                                            </td>
                                            <td class="p-3">Administrator</td>
                                            <td class="p-3 text-[#2271b1]">-</td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
            </div>
    </div>

</body>

</html>